{
  "name": "audiochart",
  "version": "0.3.0",
  "private": true,
  "homepage": "http://matatk.agrip.org.uk/audiochart/",
  "license": "MIT",
  "repository": "https://github.com/matatk/audiochart.git",
  "scripts": {
    "prebuild": "npm run test",
    "build": "npm run build:core",
    "prebuild:ci": "npm run test:ci",
    "build:ci": "npm run build:core",
    "build:core": "npm run uglify && npm run jsdoc:public && npm run jsdoc:internal && npm run docco && npm run replace",
    "clean": "git clean --force -dx --exclude node_modules",
    "docco": "docco examples/hello/hello-world-tutorial.js --output examples/hello/ --layout classic",
    "jsdoc:internal": "rimraf doc/internal/ && jsdoc src/audiochart.js --readme README.md --private --destination doc/internal/",
    "jsdoc:public": "rimraf doc/public/ && jsdoc src/audiochart.js --readme README.md --destination doc/public/",
    "lint": "eslint .",
    "replace": "npm run replace:1 && npm run replace:2 && npm run replace:3",
    "replace:1": "replace-in-file /f5f5ff/ig ffd examples/hello/docco.css --isRegex",
    "replace:2": "replace-in-file \"/'Palatino Linotype', 'Book Antiqua', Palatino, FreeSerif, serif/g\" \"Verdana, sans-serif\" examples/hello/docco.css --isRegex",
    "replace:3": "replace-in-file /#261a3b/g auto examples/hello/docco.css --isRegex",
    "pretest": "npm run lint",
    "test": "karma start",
    "test:ci": "npm run test -- --browsers ChromeHeadless",
    "uglify": "mkdirp lib && uglifyjs src/* --mangle --source-map=\"includeSources\" --output lib/audiochart.min.js"
  },
  "devDependencies": {
    "docco": "~0.7",
    "eslint": "~4.7",
    "jasmine-core": "~2.8",
    "jsdoc": "~3.5",
    "karma": "~1.7",
    "karma-chrome-launcher": "~2.2",
    "karma-coverage": "~1.1",
    "karma-firefox-launcher": "~1.0",
    "karma-jasmine": "~1.1",
    "karma-jasmine-jquery": "~0.1",
    "karma-spec-reporter": "~0.0",
    "mkdirp": "~0.5",
    "replace-in-file": "~3.0.0-beta.2",
    "rimraf": "~2.6",
    "uglify-js": "~3.1"
  }
}
